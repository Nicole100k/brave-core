workspace(name = "cxx.rs")

load("@bazel_tools//tools/build_defs/repo:http.bzl", "http_archive")

http_archive(
    name = "rules_rust",
    sha256 = "839d8c31b9a65fbc041ac88a71df663fc0158e5a5c486c9a8a5e0223d2469e67",
    strip_prefix = "rules_rust-112242bb7389bf86c77ee0a2662474c68c725529",
    urls = [
        # Main branch as of 2022-04-27
        "https://github.com/bazelbuild/rules_rust/archive/112242bb7389bf86c77ee0a2662474c68c725529.tar.gz",
    ],
)

load("@rules_rust//rust:repositories.bzl", "rules_rust_dependencies", "rust_register_toolchains")

RUST_VERSION = "1.60.0"

rules_rust_dependencies()

rust_register_toolchains(
    version = RUST_VERSION,
)

load("//tools/bazel:vendor.bzl", "vendor")

vendor(
    name = "third-party",
    cargo_version = RUST_VERSION,
    lockfile = "//third-party:Cargo.lock",
)
